<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="choose_category_wizard_form" model="ir.ui.view">
        <field name="model">slides.choose.category.wizard</field>
        <field name="arch" type="xml">
            <form string="Category wizard">
                <group>
                    <group>
                        <field name="category_sort_id" />
                    </group>
                </group>

                <p>Set a new category for the documents below</p>

                <group>
                    <field name="slide_ids">
                        <tree>
                            <field name="name" />
                            <field name="category_id" />
                            <field name="channel_id" />
                        </tree>
                    </field>
                    <field name="channel_ids" invisible="1" />
                </group>
                <footer>
                    <button
                        string="Confirm"
                        type="object"
                        class="oe_highlight"
                        name="confirm"
                    />
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_category_wizard" model="ir.actions.act_window">
        <field name="name">Set a new category</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">slides.choose.category.wizard</field>
        <field name="target">new</field>
        <field name="view_mode">form</field>
        <field name="binding_model_id" ref="website_slides.model_slide_slide" />
    </record>
</odoo>
