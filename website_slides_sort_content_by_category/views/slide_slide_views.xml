<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="view_slide_slide_form_category" model="ir.ui.view">
        <field name="name">slide.slide.form.category</field>
        <field name="model">slide.slide</field>
        <field name="inherit_id" ref="website_slides.view_slide_slide_form"/>
        <field name="arch" type="xml">
            <field name="channel_id" position="after">
                <field name="category_sort_id" options="{'no_quick_create': True}" domain="[('is_category', '=', True), ('channel_id', '=', channel_id)]" />
                <field name="sequence" invisible="1" />
            </field>
        </field>
    </record>

    <record id="view_slide_channel_form" model="ir.ui.view">
        <field name="name">slide.channel.view.form.tree.limit</field>
        <field name="model">slide.channel</field>
        <field name="inherit_id" ref="website_slides.view_slide_channel_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='slide_ids']//tree" position="attributes">
                <attribute name="limit">2000</attribute>
            </xpath>
        </field>
    </record>
</odoo>
