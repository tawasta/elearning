<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.create.user</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website_slides.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='elearning_selection_settings']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="elearning_create_user">
                    <div class="o_setting_left_pane">
                        <field name="website_slides_create_user"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="website_slides_create_user"/>
                        <div class="text-muted">
                            Create user when _action_add_members function is called
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box" id="elearning_install_edu">
                    <div class="o_setting_left_pane">
                        <field name="module_website_slides_edu"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="module_website_slides_edu"/>
                        <div class="text-muted">
                            EDU
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
